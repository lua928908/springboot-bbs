<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper public "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.springboot.springbootbbs.jdbc.dao.ISimpleBbsDao">
    <select id="listDao" resultType="com.study.springboot.springbootbbs.jdbc.dto.SimpleBbsDto">
        SELECT * FROM bbs ORDER BY id DESC
    </select>

    <select id="viewDao" resultType="com.study.springboot.springbootbbs.jdbc.dto.SimpleBbsDto">
        SELECT * FROM bbs where id = ${param1}
    </select>

    <insert id="writeDao">
        INSERT into bbs (writer, title, content)
            VALUES (${param1}, ${param2}, ${param3})
    </insert>

    <delete id="deleteDao">
        DELETE FROM bbs WHERE id = #{param1}
    </delete>
</mapper>